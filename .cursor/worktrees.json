{
  "setup-worktree-unix": [
    "bun install",
    "cp $ROOT_WORKTREE_PATH/.env .env",
    "cp $ROOT_WORKTREE_PATH/.env.test .env.test",
    "bun run build"
  ],
  "setup-worktree-windows": [
    "bun install",
    "copy %ROOT_WORKTREE_PATH%\\.env .env",
    "copy %ROOT_WORKTREE_PATH%\\.env.test .env.test",
    "bun run build"
  ],
  "setup-worktree": [
    "bun install",
    "echo 'Environment files copied. Ready for testing.'"
  ]
}
